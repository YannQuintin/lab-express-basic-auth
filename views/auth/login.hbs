<div id="form">
  <div class="card text-center">
  <div class="card-header">
    <h2>Login</h2>
  </div>
  <div class="card-body">
    <form action="/login" method="POST">
        <label for="input-email">Email</label>
        <input type="email" id="input-email" name="email" placeholder="Your email" value="{{email}}" required/>

        <label for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="********" />

        <button type="submit">Login</button>
    </form>
    <button href="#"  type="submit" class="btn btn-primary">Login</button>
  </div>
  <div class="card-footer text-muted">
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
  </div>
</div>  
</div>


